---
import Base from "./Base.astro";
const { title = "esby explorations" } = Astro.props;
---

<Base title={title}>
    <div class="max-w-7xl mx-auto px-8 flex flex-col gap-16">
        <p class="sm:hidden font-bold rounded-md p-2 bg-red-400 text-white">
            if you're viewing on mobile, try viewing in landscape!
        </p>
        <main
            class="max-w-none prose prose-xl prose-a:no-underline prose-h1:text-5xl prose-h2:text-4xl prose-h3:text-3xl prose-img:rounded-md dark:prose-invert"
        >
            <slot />
        </main>
    </div>
</Base>
