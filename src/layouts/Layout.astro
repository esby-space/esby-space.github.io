---
import Base from "./Base.astro";
import Nav from "../components/Nav.astro";
const { title = "esby explorations" } = Astro.props;
---

<Base title={title}>
    <div class="max-w-5xl mx-auto px-8 flex flex-col md:flex-row gap-16">
        <Nav />

        <main
            class="max-w-none prose prose-2xl font-light prose-a:no-underline prose-h1:text-5xl prose-h2:text-4xl prose-h3:text-3xl prose-img:rounded-md dark:prose-invert"
        >
            <slot />
        </main>
    </div>
</Base>
